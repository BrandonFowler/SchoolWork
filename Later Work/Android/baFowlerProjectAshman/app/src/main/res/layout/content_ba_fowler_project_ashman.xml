<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_ba_fowler_project_ashman" tools:context=".baFowlerProjectAshman">

    <com.fowler.brandon.bafowlerprojectashman.MazeDisplay
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MazeView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="To pause or continue, tap the gameboard"
        android:id="@+id/Instructions"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/MazeView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:longClickable="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Status"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/Instructions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@+id/MazeView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <com.fowler.brandon.bafowlerprojectashman.CustomButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/up"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <com.fowler.brandon.bafowlerprojectashman.CustomButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <com.fowler.brandon.bafowlerprojectashman.CustomButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/down"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <com.fowler.brandon.bafowlerprojectashman.CustomButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/left"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>
</RelativeLayout>
